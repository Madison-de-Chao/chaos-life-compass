{
  "name": "@hongling/member-login-widget",
  "version": "1.0.0",
  "description": "虹靈御所會員登入小工具 - 可嵌入任何 React 專案的統一登入組件",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "sideEffects": [
    "*.css"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepublishOnly": "npm run test:run && npm run build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "@supabase/supabase-js": ">=2.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.3.0",
    "@vitest/ui": "^1.3.0",
    "jsdom": "^24.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.3.0"
  },
  "dependencies": {
    "lucide-react": "^0.400.0",
    "zod": "^3.23.0"
  },
  "keywords": [
    "react",
    "login",
    "auth",
    "widget",
    "supabase",
    "hongling",
    "member",
    "authentication"
  ],
  "author": "虹靈御所",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hongling/member-login-widget"
  },
  "bugs": {
    "url": "https://github.com/hongling/member-login-widget/issues"
  },
  "homepage": "https://github.com/hongling/member-login-widget#readme"
}
